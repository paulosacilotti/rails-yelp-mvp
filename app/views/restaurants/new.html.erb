<h1>New Restaurant</h1>
<div class="row justify-content-center">
  <div class="col-6">
    <%= simple_form_for @restaurant do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :category %>
      <%= f.input :rating %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
